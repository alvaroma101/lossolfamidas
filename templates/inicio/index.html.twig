{% extends 'base.html.twig' %}

{% block title %}Inicio index{% endblock %}

{% block body %}
    <h1>Inicio index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for inicio in inicios %}
            <tr>
                <td>{{ inicio.id }}</td>
                <td>
                    <a href="{{ path('inicio_show', {'id': inicio.id}) }}">show</a>
                    <a href="{{ path('inicio_edit', {'id': inicio.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('inicio_new') }}">Create new</a>
{% endblock %}
